# Minimal local baseline (self-hosted controller profile)
APP_SECRET_KEY=replace-with-strong-secret
ZT_PROVIDER=self_hosted_controller
ZT_CONTROLLER_AUTH_TOKEN=replace-with-controller-token

# Common local wiring overrides (keep only if needed)
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5433/zt_ix
REDIS_URL=redis://localhost:6379/0

# OAuth values (only required when testing PeeringDB login)
PEERINGDB_CLIENT_ID=replace-with-client-id
PEERINGDB_CLIENT_SECRET=replace-with-client-secret
PEERINGDB_REDIRECT_URI=http://localhost:5173/auth/callback

# Non-secret runtime config path (app currently reads workflow.approval_mode from YAML)
ZTIX_RUNTIME_CONFIG_PATH=runtime-config.yaml
# Optional: host-side runtime config file path for docker compose api/worker mount
ZTIX_RUNTIME_CONFIG_HOST_PATH=./runtime-config.yaml

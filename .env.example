# Core app
APP_ENV=development
APP_SECRET_KEY=replace-with-strong-secret
SESSION_COOKIE_SECURE=false
LOCAL_AUTH_ENABLED=true
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5433/zt_ix
REDIS_URL=redis://localhost:6379/0

# PeeringDB OAuth
PEERINGDB_CLIENT_ID=replace-with-client-id
PEERINGDB_CLIENT_SECRET=replace-with-client-secret
PEERINGDB_REDIRECT_URI=http://localhost:8000/auth/callback

# ZeroTier provider mode
ZT_PROVIDER=self_hosted_controller

# ZeroTier self-hosted controller mode runtime
ZT_CONTROLLER_BASE_URL=http://127.0.0.1:9993/controller
# Source from controller secret material (compose volume):
# /var/lib/zerotier-one/authtoken.secret
ZT_CONTROLLER_AUTH_TOKEN=replace-with-controller-token
# Optional runtime secret file source. When set, token is read from this file.
ZT_CONTROLLER_AUTH_TOKEN_FILE=
ZT_CONTROLLER_REQUIRED_NETWORK_IDS=
ZT_CONTROLLER_READINESS_STRICT=true
ZT_CONTROLLER_BACKUP_DIR=/var/backups/zt-ix-controller
ZT_CONTROLLER_BACKUP_RETENTION_COUNT=14
ZT_CONTROLLER_STATE_DIR=/var/lib/zerotier-one

# ZeroTier Central compatibility-only mode (migration/testing, non-release)
ZT_CENTRAL_BASE_URL=https://api.zerotier.com/api/v1
ZT_CENTRAL_API_TOKEN=replace-with-central-token

# Core app
APP_ENV=development
APP_SECRET_KEY=replace-with-strong-secret
SESSION_COOKIE_SECURE=false
LOCAL_AUTH_ENABLED=true
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5433/zt_ix
REDIS_URL=redis://localhost:6379/0

# PeeringDB OAuth
PEERINGDB_CLIENT_ID=replace-with-client-id
PEERINGDB_CLIENT_SECRET=replace-with-client-secret
PEERINGDB_REDIRECT_URI=http://localhost:8000/auth/callback

# ZeroTier provider mode
ZT_PROVIDER=central

# ZeroTier Central mode secret
ZT_CENTRAL_API_TOKEN=replace-with-central-token

# ZeroTier self-hosted controller mode secret
ZT_CONTROLLER_AUTH_TOKEN=replace-with-controller-token
